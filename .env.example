
# Server Configuration
PORT=5005
NODE_ENV=development

# Database Configuration
# For local development:
MONGODB_URI=mongodb://127.0.0.1:27017/gestao-obra-server
# For production, use a secure connection string:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/gestao-obra-server

# JWT Authentication
# IMPORTANT: Generate a strong random secret for production!
# You can use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
TOKEN_SECRET=your-super-secret-jwt-key-change-this-in-production-use-at-least-32-characters

# Logging (optional)
LOG_LEVEL=info

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX=5

# CORS Configuration (optional)
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173

# Cloudinary (required for signed uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Optional Cloudinary folders
CLOUDINARY_IMAGE_FOLDER=nexus-obra/images
CLOUDINARY_RAW_FOLDER=nexus-obra/raw
